#include <unistd.h>

void	ft_print_comb(void)
{
	char	cnum[3];
	char	sep[2];

	cnum[0] = '0';
	cnum[1] = '1';
	cnum[2] = '9';
	sep[0] = ',';
	sep[1] = ' ';

	write(1, &cnum, 3);

	cnum[2] = 48 + cnum[2]+1;

	write(1, &sep, 2);
	write(1, &cnum, 3);
}
